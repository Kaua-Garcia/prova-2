EX 9
#include <stdio.h>

int main() {
    float nota1, nota2, media;
    int i;

    // Loop para os 5 alunos
    for (i = 1; i <= 5; i++) {
        printf("Aluno %d:\n", i);

        // Entrada das duas notas
        printf("Digite a primeira nota: ");
        scanf("%f", &nota1);
        printf("Digite a segunda nota: ");
        scanf("%f", &nota2);

        // Cálculo da média
        media = (nota1 + nota2) / 2;

        // Verificação da situação do aluno
        printf("Média: %.2f - ", media);
        if (media >= 7.0) {
            printf("Aprovado\n");
        } else if (media >= 5.0 && media < 7.0) {
            printf("Recuperação\n");
        } else {
            printf("Reprovado\n");
        }
        printf("\n");  // Adiciona uma linha em branco para separar os alunos
    }

    return 0;
}
