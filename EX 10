EX 10

#include <stdio.h>

int main() {
    int idade;
    int i;


    for (i = 1; i <= 10; i++) {
        printf("Pessoa %d:\n", i);

        
        printf("Digite a idade: ");
        scanf("%d", &idade);

        
        if (idade >= 0 && idade <= 12) {
            printf("Criança\n");
        } else if (idade >= 13 && idade <= 17) {
            printf("Adolescente\n");
        } else if (idade >= 18 && idade <= 64) {
            printf("Adulto\n");
        } else if (idade >= 65) {
            printf("Idoso\n");
        } else {
            printf("Idade inválida\n");  
        printf("\n");  
    }

    return 0;
}
